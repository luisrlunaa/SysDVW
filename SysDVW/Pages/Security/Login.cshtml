@page
@model SysDVW.Pages.Security.LoginModel

@{
    Layout = "_LayoutFullScreen";
}
<div class="login-box">
    <div class="login-logo">
       <b>Sistema de Venta e Inventario</b>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Iniciar Sesion</p>
            <span class="text-danger text-center">@Html.ValidationMessage("CustomError")</span>
            <form asp-page-handler="Inicio" method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="Login.UserName" placeholder="Correo">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" asp-for="Login.Password" placeholder="Clave">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6 mt-2">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" asp-for="Login.Remenberme">
                            <label for="remember">
                                Recordarme
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-block">Iniciar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <!--<div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
    </div>-->
            <!-- /.social-auth-links -->

            <p class="mb-1 mt-2">
                <a asp-page="/Security/forgot-password">Olvidaste tu Clave?</a>
            </p>
            <p class="mb-0">
                <a asp-page="/Security/register" class="text-center">Deseas Registrarte?</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->