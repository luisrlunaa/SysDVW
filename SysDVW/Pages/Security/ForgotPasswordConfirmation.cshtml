@page
@model SysDVW.Pages.Security.ForgotPasswordConfirmationModel
@{
    Layout = "_LayoutFullScreen";
}
<div class="login-box">
    <div class="login-logo">
        <b>Sistema de Venta e Inventario</b>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
                <h4 class="mb-2  mt-xl-5 text-center">
                    Confirmación de contraseña olvidada
                </h4>
                <br />
                <p class="mb-xl-5 text-justify">
                    El enlace ha sido enviado, por favor revise su correo electronico para restablecer su contraseña.
                </p>
                <br />
            <p class="mt-3 mb-1">
                <a asp-page="/Security/login" class="btn btn-success">Ir al Inicio de sesion</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
